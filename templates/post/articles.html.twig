{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<h1>Ici nos articles</h1>


<div class="row">
{% for post in posts %}
<div class="col-sm-3">
  <div class="card border-dark  m-3" style="max-width: 20rem;">
    <div class="card-header text-center">{{ post.title }}</div>
        <span class="badge badge-pill badge-info p-2">{{ post.category.slug }}</span>
      <div class="card-body">
        <p class="card-text text-center text-truncate">{{ post.article }}â‚¬</p>
        <p class="text-info text-right mt-2">{{ post.user.username }}</p>
        <div class="row justify-content-center mt-4">
          <a href="{{ path('article',{id:post.id}) }}"><button type="button" class="btn btn-success">Voir le post</button></a>
        </div>
    </div>
  </div>
</div>
{% endfor %}
</div>

{% endblock %}
