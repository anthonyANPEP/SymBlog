{% extends "base.html.twig" %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    
    <div class="container">
        {{ form_start(form) }}
            <fieldset>
            <legend class="text-center m-3">
                Formulaire d'inscription
            </legend>
                <div class="form-group row justify-content-center">
                    <label for="pseudo">Pseudo</label>
                    {{form_widget(form.username,{'attr':{'class':'form-control','placeholder':'Pseudo'}})}}
                    {{form_errors(form.username)}}
                </div>
                <div class="form-group row justify-content-center">
                    <label for="password">Mot de passe</label>
                    {{form_widget(form.password,{'attr':{'class':'form-control','placeholder':'Mot de passe'}})}}
                    {{form_errors(form.password,{'attr':{'class':'invalid-feedback'}})}}
                </div>
                <div class="row justify-content-center mt-4 mb-4">
                    <button type="submit" class="btn btn-info">
                        S'inscrire
                    </button>
                </div>
            </fieldset>
        {{ form_end(form) }}
    </div>


{% endblock %}